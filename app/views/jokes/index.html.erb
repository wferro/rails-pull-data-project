<%= link_to 'HOME', "welcome/index" %>
<%= link_to 'JOKES', jokes_path %>
<%= link_to 'ABOUT', "about/index" %>

<h1>Listing Jokes</h1>

<table>
  <tr>
    <th>Question</th>
    <th>Answer</th>
    <th>Quote</th>
    <th></th>
  </tr>

  <% @jokes.each do |joke| %>
    <tr>
      <td><%= joke.question %></td>
      <td><%= joke.answer %></td>
      <td><%= joke.quote %></td>
      <td><%= link_to 'Show', joke_path(joke) %></td>
    </tr>
  <% end %>
</table>
